<h1>Update your profile</h1>

<a href="/user/update_profile">Update Profile</a>

<form method="post" action="/user/update_profile">
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <label> Username: </label>
    <input type="text" name="username" value="<%= @user && @user.username %>">

    <label> Email: </label>
    <input type="text" name="email" value="<%= @user && @user.email %>">

    <label> Password: </label>
    <input type="password" name="password" value="<%= @user && @user.password %>">

    <label> Password Confirmation: </label>
    <input type="password" name="password_confirmation" value="<%= @user && @user.password %>">
    
    <input type="submit" value="Submit">

  </div>    
</div>